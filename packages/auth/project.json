{
  "name": "@analog-tools/auth",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/auth/src",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/{projectRoot}",
        "currentVersionResolver": "git-tag",
        "fallbackCurrentVersionResolver": "disk"
      }
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run @analog-tools/auth-angular:build --configuration=production",
          "nx run @analog-tools/auth:vite:build --configuration=production",
          "mkdir -p dist/packages/auth/angular",
          "cp -R dist/packages/auth-angular/* dist/packages/auth/angular/",
          "node packages/auth/tools/update-package-json.js"
        ],
        "parallel": false
      },
      "dependsOn": [
        {
          "projects": ["auth-angular"],
          "target": "build"
        }
      ]
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    }
  }
}
