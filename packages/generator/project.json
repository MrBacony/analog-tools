{
  "name": "@analog-tools/generator",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/generator/src",
  "projectType": "library",
  "tags": ["publishable"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{workspaceRoot}/node_modules/{projectRoot}"],
      "options": {
        "outputPath": "{workspaceRoot}/node_modules/@analog-tools/generator/",
        "main": "packages/generator/src/index.ts",
        "tsConfig": "packages/generator/tsconfig.lib.json",
        "assets": [
          "packages/generator/*.md",
          {
            "input": "./packages/generator/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/generator/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/generator",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/generator",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/packages/generator"
      }
    },
     "pack": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run @analog-tools/generator:build",
          "cd dist/packages/generator && npm pack --pack-destination ~"
        ],
        "parallel": false
      },
      "dependsOn": [
        {
          "target": "build"
        }
      ]
    }
  }
}
